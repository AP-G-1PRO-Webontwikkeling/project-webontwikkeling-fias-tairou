<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/2.0.2/css/dataTables.bootstrap5.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Index</title>
  </head>
  <body>
    <!-- * ! Better to use relative paths -->
    <section><%- include('./partials/header'); %></section>

    <table id="auction-list" class="w-100 table table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Item</th>
          <th scope="col">Highest Bid</th>
          <th class="text-center" scope="col">Active</th>
          <th scope="col">Ends @</th>
          <th scope="col">Action</th>
        </tr>
        <tbody>
          <% for( auction of auctions) { %>
              <tr>
                <!-- Start -->
                <td scope="row"><%= auction.eventName %></td>
                <td><%= auction.item.name %></td>
                <td><%= auction.currentHighestBid %></td>
                <td class="text-center"><%= auction.item.active%></td>
                <td><%= auction.endDate %></td>
                <td><a href=<%= `/items/${auction.item._Id}`  %>>view</a></td>
              </tr>
            <!-- loop end -->
            <% } %>
        </tbody>
      </thead>
    </table>

    <section><%- include('./partials/footer'); %></section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>

  <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>
  <script src="https://cdn.datatables.net/2.0.2/js/dataTables.bootstrap5.js"></script>

  <script>
    new DataTable('#auction-list')
  </script>
</html>
